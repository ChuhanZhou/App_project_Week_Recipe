<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/navigationDrawerHeader_imageView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/navigation_drawer_header_background"
        android:translationZ="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="lollipop" />

    <androidx.cardview.widget.CardView
        android:id="@+id/navigationDrawerHeader_userImageCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#888888"
        app:cardCornerRadius="100dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/navigationDrawerHeader_imageView"
        app:layout_constraintEnd_toEndOf="@+id/navigationDrawerHeader_imageView"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/navigationDrawerHeader_imageView"
        app:layout_constraintTop_toTopOf="@+id/navigationDrawerHeader_imageView"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:translationZ="5dp"
        tools:targetApi="lollipop">
        <ImageView
            android:id="@+id/navigationDrawerHeader_userImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher_foreground"/>
        <ImageView
            android:id="@+id/navigationDrawerHeader_userPictureBackground"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/user_picture_background"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/navigationDrawerHeader_userNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="@string/nullData"
        app:layout_constraintBottom_toBottomOf="@+id/navigationDrawerHeader_userImageCardView"
        app:layout_constraintStart_toEndOf="@+id/navigationDrawerHeader_userImageCardView"
        app:layout_constraintTop_toTopOf="@+id/navigationDrawerHeader_userImageCardView"
        app:layout_constraintVertical_bias="0"
        android:translationZ="5dp"
        tools:targetApi="lollipop" />

</androidx.constraintlayout.widget.ConstraintLayout>