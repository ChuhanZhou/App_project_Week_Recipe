<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.week_recipe">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Week_Recipe">
        <activity android:name=".view.activity.FavouriteFoodActivity" />
        <activity android:name=".view.activity.SetWeekRecipeByFavouriteActivity" />
        <activity android:name=".view.activity.AddFoodToMyDailyRecipeListActivity" />
        <activity
            android:name=".view.activity.EditFoodInformationActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".view.activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.HomePageActivity" />
        <activity
            android:name=".view.activity.FoodInformationActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>