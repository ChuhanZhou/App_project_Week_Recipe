<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_recipeList_cardView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/background_1"
        app:cardCornerRadius="25dp"
        app:cardElevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="lollipop">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_recipeList_foodImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/ripple_foreground"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_action_food"
                app:layout_constraintBottom_toBottomOf="@+id/item_recipeList_foodName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/item_recipeList_likeCardView"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="27.5dp"
                app:cardElevation="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/item_recipeList_foodImage"
                app:layout_constraintEnd_toStartOf="@+id/item_recipeList_deleteCardView"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:targetApi="lollipop">

                <ImageView
                    android:id="@+id/item_recipeList_like"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.95"
                    android:background="#FFFFFF"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/ripple_foreground"
                    android:scaleType="center"
                    android:src="@drawable/ic_button_star" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/item_recipeList_deleteCardView"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="27.5dp"
                app:cardElevation="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/item_recipeList_more"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:targetApi="lollipop">

                <ImageView
                    android:id="@+id/item_recipeList_delete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.85"
                    android:background="#FF0000"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/ripple_foreground"
                    android:scaleType="center"
                    android:src="@drawable/ic_button_delete" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/item_recipeList_foodName"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#000000"
                android:alpha="0.7"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:text="@string/nullData"
                android:textColor="@color/textView_Text1"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:id="@+id/item_recipeList_more"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/ripple_foreground"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_button_more"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>